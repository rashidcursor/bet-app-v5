{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "üêõ Debug Backend (Express Server)",
        "runtimeExecutable": "nodemon",
        "runtimeArgs": ["src/app.js"],
        "cwd": "${workspaceFolder}/server",
        "restart": true,
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "skipFiles": ["<node_internals>/**"],
        "env": {
          "NODE_ENV": "development",
          "NODE_OPTIONS": "--inspect"
        }
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Next.js: Debug frontend (SSR + API routes)",
        "runtimeExecutable": "npm",
        "runtimeArgs": ["run", "dev"],
        "cwd": "${workspaceFolder}/client",
        "console": "integratedTerminal",
        "skipFiles": ["<node_internals>/**"],
        "env": {
          "NODE_OPTIONS": "--inspect"
        }
      },
      {
        "type": "chrome",
        "request": "launch",
        "name": "Next.js: Debug browser code",
        "url": "http://localhost:3000",
        "webRoot": "${workspaceFolder}/client"
      },
      {
        "type": "node",
        "request": "attach",
        "name": "üîó Attach to Backend (Port 9229)",
        "port": 9229,
        "restart": true,
        "localRoot": "${workspaceFolder}/server",
        "remoteRoot": "${workspaceFolder}/server",
        "skipFiles": ["<node_internals>/**"]
      }
    ],
    "compounds": [
      {
        "name": "üöÄ Debug Full Stack (Backend + Frontend)",
        "configurations": [
          "üêõ Debug Backend (Express Server)",
          "Next.js: Debug frontend (SSR + API routes)"
        ],
        "stopAll": true
      }
    ]
  }
  